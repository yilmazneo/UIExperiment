<Window x:Class="Test.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="DialogWindow" Height="300" Width="300" WindowStyle="None" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="Title" Grid.Row="0"></Label>
        <TextBlock Name="Message" Grid.Row="1"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="2" ButtonBase.Click="Button_Click">
            <Button Name="Yes" Content="Yes" Visibility="Collapsed"></Button>
            <Button Name="No" Content="No" Visibility="Collapsed"></Button>
            <Button Name="OK" Content="OK" Visibility="Collapsed"></Button>
            <Button Name="Cancel" Content="Cancel" Visibility="Collapsed"></Button>
        </StackPanel>
    </Grid>
</Window>
